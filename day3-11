Second Array Max And Min
#include <stdio.h>
#include <stdlib.h>
#include <limits.h>

int cmp_int(const void *a, const void *b) {
    return (*(int*)a) - (*(int*)b);
}

int sum_second(int arr[], int n) {
    if (n < 4) return 0;  // need at least 2 even and 2 odd positions

    int even_count = (n + 1) / 2;
    int odd_count  = n / 2;
    int *even = malloc(even_count * sizeof(int));
    int *odd  = malloc(odd_count  * sizeof(int));
    if (!even || !odd) { perror("malloc"); exit(EXIT_FAILURE); }

    int ei = 0, oi = 0;
    for (int i = 0; i < n; i++) {
        if (i % 2 == 0) even[ei++] = arr[i];
        else            odd[oi++]  = arr[i];
    }

    qsort(even, even_count, sizeof(int), cmp_int);
    qsort(odd , odd_count , sizeof(int), cmp_int);

    int second_largest_even = even[even_count - 2];
    int second_smallest_odd = odd[1];

    free(even);
    free(odd);

    return second_largest_even + second_smallest_odd;
}

int main(void) {
    int n;
    if (scanf("%d", &n) != 1) return 0;

    int *arr = malloc(n * sizeof(int));
    for (int i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

    int result = sum_second(arr, n);
    printf("Sum=%d\n", result);

    free(arr);
    return 0;
}
