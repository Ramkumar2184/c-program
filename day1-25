Mark Calculation
#include <stdio.h>

int main() {
    char name[100];
    int m1, m2, m3, m4, m5;
    int total;
    float average;

    
    scanf("%s", name);
    scanf("%d%d%d%d%d", &m1, &m2, &m3, &m4, &m5);

    
    total = m1 + m2 + m3 + m4 + m5;
    average = total / 5.0;


    printf("Name of the Student:%s\n", name);
    printf("Total marks:%d\n", total);
    printf("Average marks:%.1f\n", average);

    return 0;
}
