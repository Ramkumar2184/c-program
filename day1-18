#include <math.h>
#include <stdio.h>
#include <string.h>
#include <stdlib.h>
#include <assert.h>
#include <limits.h>
#include <stdbool.h>

int main() {
   int a;
    scanf("%d",&a);
    int firstdigit = a/1000;
    int lastdigit =  a%10;
    int num= firstdigit+lastdigit ;
    printf("%d",num);
}
